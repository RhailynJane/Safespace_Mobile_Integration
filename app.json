{
  "expo": {
    "name": "SafeSpace",
    "slug": "SafeSpace",
    "version": "1.0.0",
    "scheme": "my-cool-app",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "plugins": [
      "@twilio/voice-react-native-sdk",
      "expo-dev-client",
      [
        "expo-router"
      ],
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow SafeSpace to access your photos",
          "savePhotosPermission": "Allow SafeSpace to save photos to your library",
          "isAccessMediaLocationEnabled": false,
          "granularPermissions": [
            "photo"
          ]
        }
      ]
    ],
    "assetBundlePatterns": [
      "assets/fonts/*"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safespacedev.SafeSpace",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "SafeSpace needs access to your microphone for voice calls.",  //Added for Twilio
        "UIBackgroundModes": ["audio", "voip"]  // Added for Twilio background calls
      }
    },
    "android": {
      "package": "com.safespacedev.SafeSpace",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECORD_AUDIO"  // Added for Twilio

      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "e7c636be-6f7e-403c-8731-4ec9a0ec2d48"
      }
    },
    "owner": "safespacedev"
  }
}
