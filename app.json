{
  "expo": {
    "name": "SafeSpace",
    "slug": "SafeSpace",
    "version": "1.0.0",
    "scheme": "my-cool-app",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "plugins": [
      "expo-dev-client",
      [
        "expo-router"
      ],
      "expo-secure-store",
      "expo-web-browser",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow SafeSpace to access your photos",
          "savePhotosPermission": "Allow SafeSpace to save photos to your library",
          "isAccessMediaLocationEnabled": false,
          "granularPermissions": [
            "photo"
          ]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SafeSpace to access your camera for video consultations with support workers."
        }
      ],
      "expo-audio",
      "expo-av"
    ],
    "assetBundlePatterns": [
      "assets/fonts/*"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.safespacedev.SafeSpace",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "SafeSpace needs camera access for video calls",
        "NSMicrophoneUsageDescription": "SafeSpace needs access to your microphone for voice calls.",
        "UIBackgroundModes": [
          "audio",
          "voip"
        ]
      }
    },
    "android": {
      "package": "com.safespace",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_CONNECT",
        "SCHEDULE_EXACT_ALARM",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "extra": {
      "eas": {
        "projectId": "e7c636be-6f7e-403c-8731-4ec9a0ec2d48"
      },
      "sendbirdAppId": "E30F2BDE-F34E-464F-9689-7D5C443231A3"
    },
    "owner": "safespacedev"
  }
}
